#include "x2_inc_spellhook"
#include "aaa_newfey_inc"
#include "aaa_constants"

void main()
{
	if (!X2PreSpellCastCode())
    {	return;	}

    object oPC 			= OBJECT_SELF;
	object oTarget		= GetSpellTargetObject();
	location lTarget	= GetSpellTargetLocation();
	object 	oItem		= GetItemPossessedBy(oPC,"ps_essence");
	
	int nSpell 			= GetSpellId();
	int iLevel;
	int iCLev;
	
	switch (nSpell)
	{
///////////////////////////////////////////////////////////////////////////////////
		case 1840 :		//Fey Trait
			PS_Fey_FeyTrait(oPC);
		break;
///////////////////////////////////////////////////////////////////////////////////
		case 1841 :		//Hypnotism
			PS_Fey_FeyHypnotism(oPC);
		break;
///////////////////////////////////////////////////////////////////////////////////
		case 1843 :		//Sleep
			PS_Fey_FeySleep(oPC, lTarget);
		break;
///////////////////////////////////////////////////////////////////////////////////
		case 1844 :		//Fear
			PS_Fey_FeyFear(oPC, lTarget);
		break;
///////////////////////////////////////////////////////////////////////////////////
		case 1846 :		//Invisbility
			PS_Fey_FeyInvisbility(oPC);
		break;
///////////////////////////////////////////////////////////////////////////////////
		case 1847 :		//Glamer
			PS_Fey_FeyGlamer(oPC, lTarget);
		break;
///////////////////////////////////////////////////////////////////////////////////
		case 1848 :		//Kiss
			PS_Fey_Kiss(oPC, oTarget);
		break;
///////////////////////////////////////////////////////////////////////////////////
		case 1849 :		//Aspect of Seasons
			PS_Fey_SeasonalAspect(oPC);
		break;
///////////////////////////////////////////////////////////////////////////////////
	}
}