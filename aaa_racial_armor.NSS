/* Feat created by Ceremorph 11/25/15
Boosts armor class of the creature based on level  */

#include "x2_inc_spellhook"
#include "aaa_racial_armor_inc"
#include "aaa_constants"

void main()
{
	if (!X2PreSpellCastCode())
    {	return;	}

    object oPC = OBJECT_SELF;
	int nSpell = GetSpellId();
	
	switch (nSpell)
	{
		case 577 :		//Hound Archon
			PS_NatArmor_Archon(oPC);
		break;
////////////////////////////////////////////////////////////////////////////////////
		case 583 :		//Trumpet and Word Archon
			PS_NatArmor_ArchonPRC(oPC);
		break;
////////////////////////////////////////////////////////////////////////////////////
		case 1440 :		//Fire, Frost, and Hill Giants, and Savage Marauder PRC
			PS_NatArmor_Giant(oPC);
		break;
////////////////////////////////////////////////////////////////////////////////////
		case 1444 :		//Astral, Monadic, and Movanic Deva
			PS_NatArmor_Deva(oPC);
		break;
////////////////////////////////////////////////////////////////////////////////////
		case 1463 :		//Bralani, Firre, and Ghaele Eladrin
			PS_NatArmor_Eladrin(oPC);
		break;
////////////////////////////////////////////////////////////////////////////////////
		case 1822 :		//Succubus
			PS_NatArmor_Succubus(oPC);
		break;
///////////////////////////////////////////////////////////////////////////////////
		case 1830 :		//Marquis Cambion
			PS_NatArmor_MarqCamb(oPC);
		break;
////////////////////////////////////////////////////////////////////////////////////
		case 1883 :		//Erinyes
			PS_NatArmor_Erinyes(oPC);
		break;
///////////////////////////////////////////////////////////////////////////////////
		case 1888 :		//Brachina
			PS_NatArmor_Brachina(oPC);
		break;
///////////////////////////////////////////////////////////////////////////////////
		case 2601 :		//Hezrou
			PS_NatArmor_Hezrou(oPC);
		break;
///////////////////////////////////////////////////////////////////////////////////		
	}
}