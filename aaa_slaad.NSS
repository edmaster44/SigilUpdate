#include "x2_inc_spellhook"
#include "aaa_slaad_inc"
#include "aaa_constants"

void main()
{
	if (!X2PreSpellCastCode())
    {	return;	}

    object oPC 			= OBJECT_SELF;
	object oTarget		= GetSpellTargetObject();
	location lTarget	= GetSpellTargetLocation();
	object 	oItem		= GetItemPossessedBy(oPC,"ps_essence");
	
	int nSpell 			= GetSpellId();
	int iLevel;
	int iCLev;
	
	switch (nSpell)
	{
///////////////////////////////////////////////////////////////////////////////////
		case 3001 :		//Stunning Croak
			PS_StunningCroak(oPC, nSpell);
		break;
///////////////////////////////////////////////////////////////////////////////////
		case 3002 :		//Slaad Innate Immunity
			PS_SlaadImmune(oPC, nSpell);
		break;
///////////////////////////////////////////////////////////////////////////////////
		case 3003 :		//Completely Chaotic
			PS_SlaadCompletelyChaotic(oPC, nSpell);
		break;
///////////////////////////////////////////////////////////////////////////////////
		case 3004 :		//Gray Slaad Regeneration
			PS_SlaadRegen_Gray(oPC, nSpell);
		break;
///////////////////////////////////////////////////////////////////////////////////
		case 3005 :		//Claws of Chaos
			PS_SlaadClawsOfChaos(oPC, nSpell);
		break;
///////////////////////////////////////////////////////////////////////////////////
		case 3006 :		//Slaad Damage Reduction
			PS_SlaadDR(oPC, nSpell);
		break;
///////////////////////////////////////////////////////////////////////////////////
		case 3007 :		//Chaos Hammer
			PS_SlaadChaosHammer(oPC, nSpell, lTarget);
		break;
///////////////////////////////////////////////////////////////////////////////////
		case 3008 :		//Summon Slaad
			PS_SlaadSummon(oPC, nSpell);
		break;
///////////////////////////////////////////////////////////////////////////////////
		case 3012 :		//Diminution
			PS_SlaadDiminution_Gray(oPC, oItem, nSpell);
		break;
///////////////////////////////////////////////////////////////////////////////////
		case 3013 :		//ChaoticCrafting
			PS_SlaadChaoticCrafting(oPC, oItem, nSpell);
		break;
///////////////////////////////////////////////////////////////////////////////////
		case 3014 :		//Death Slaad
			PS_SlaadApotheosis(oPC, oItem, nSpell);
		break;
///////////////////////////////////////////////////////////////////////////////////
		case 3015 :		//Improved Stunning Croak
			PS_StunningCroak(oPC, nSpell);
		break;
///////////////////////////////////////////////////////////////////////////////////
		case 3016 :		//Circle of Death
			PS_SlaadCircleOfDeath(oPC, nSpell);
		break;
///////////////////////////////////////////////////////////////////////////////////
		case 3017 :		//Cloak of Chaos
			PS_SlaadCloakOfChaos(oPC, nSpell);
		break;
///////////////////////////////////////////////////////////////////////////////////
		case 3018 :		//Power Word: Blind
			PS_SlaadPWBlind(oPC, nSpell);
		break;
///////////////////////////////////////////////////////////////////////////////////
		case 3019 :		//Champion of Chaos Regeneration
			PS_SlaadRegen_CoC(oPC, nSpell);
		break;
///////////////////////////////////////////////////////////////////////////////////
		case 3020 :		//Chaotic Damage OnHit
			PS_OnHit_ChaosDamage(nSpell, 1);
		break;
///////////////////////////////////////////////////////////////////////////////////
		case 3021 :		//Chaotic Damage OnHit 2
			PS_OnHit_ChaosDamage(nSpell, 2);
		break;
///////////////////////////////////////////////////////////////////////////////////
		case 3022 :		//Chaotic Damage OnHit 3
			PS_OnHit_ChaosDamage(nSpell, 3);
		break;	
///////////////////////////////////////////////////////////////////////////////////	
	}
}